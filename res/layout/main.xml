<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/pull"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="下拉刷新" />

        <Button
            android:id="@+id/popup_menu"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="弹出菜单" />

        <Button
            android:id="@+id/task_manager"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="任务管理器" />

        <Button
            android:id="@+id/image_download"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="图片下载" />

        <Button
            android:id="@+id/app_size"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="应用程序大小" />

        <Button
            android:id="@+id/move_view_group"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="可移动的ViewGroup" />

        <Button
            android:id="@+id/check_list"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="带有CheckBox的ListView" />

        <Button
            android:id="@+id/expandable_list"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="ExpandalbeListView" />

        <Button
            android:id="@+id/animation_activity"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Activity切换动画" />

        <Button
            android:id="@+id/break_download"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="断点下载" />
    </LinearLayout>

</ScrollView>